= form_for @relationship do |f|
  - if @relationship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@relationship.errors.count, "error")} prohibited this relationship from being saved:"
      %ul
        - @relationship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :child_id
    = f.number_field :child_id
  .actions
    = f.submit 'Save'
