.topic_panel{data: {topic_id: topic.id}}
  - if is_admin?
    .edit_link
      = link_to 'Edit', topic_path(topic)
  %h2.title
    = topic.title
  - unless topic.alternate_titles.empty?
    %p.alternate_titles
      a.k.a.
      = pretty_alternate_titles(topic)
  %p.description
    = topic.description
  %ul
    - topic.resources.each do |resource|
      %li.resource
        = link_to resource.display_title, resource.url
